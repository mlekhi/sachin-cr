{
  "manifest_version": 3,
  "name": "Sachin CR - Notion AI Review Tool",
  "version": "1.0.0",
  "description": "AI-powered review tool that analyzes Notion documents and adds structured review comments.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.notion.so/*",
    "https://*.notion.site/*",
    "https://contrary-editing-demo-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.notion.so/*",
        "https://*.notion.site/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": ["scripts/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}